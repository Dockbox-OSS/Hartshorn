    <name>Hartshorn Scripting Language (HSL)</name>
    <artifactId>hartshorn-hsl</artifactId>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>org.dockbox.hartshorn</groupId>
            <artifactId>hartshorn-core</artifactId>
        </dependency>

        <dependency>
            <groupId>org.dockbox.hartshorn</groupId>
            <artifactId>hartshorn-core</artifactId>
            <version>${revision}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.dockbox.hartshorn</groupId>
            <artifactId>hartshorn-introspect-reflection</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.dockbox.hartshorn</groupId>
            <artifactId>hartshorn-proxy-javassist</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <!-- TODO @Guus Lieben, #1061 Remove after documentation finished -->
                <configuration>
                    <skip>true</skip>
